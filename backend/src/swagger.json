{
    "openapi": "3.0.0",
    "info": {
        "title": "Todo Documentation",
        "description": "This is a simple documentation of the backend list task application. To access the routes, the project must be running on your local machine.",
        "version": "1.0.0",
        "contact": {
            "email": "fernandesferreirinha9@gmail.com"
        }
    },
    
    "paths": {
        "/tarefas": {
            "post": {
                "tags": ["Tarefa"],
                "summary": "Create a new task",
                "description": "Creating a new task in application",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "titulo": {
                                        "type": "string"
                                    },
                                    "descricao": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "tarefa": {
                                    "value": {
                                        "titulo": "Fazer lição de casa",
                                        "descricao": "Finalizar liçao de casa de matematica"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                                   "tarefa": {
                                                       "type": "object",
                                                       "properties": {
                                                           "id": {
                                                               "type": "string",
                                                               "example": "721e6fa8-1800-4d12-a089-c80e00909d94"
                                                           },
                                                           "titulo": {
                                                               "type": "string",
                                                               "example": "Fazer lição de casa"
                                                           },
                                                           "descricao": {
                                                               "type": "string",
                                                               "example": "Finalizar liçao de casa de matematica"
                                                           },
                                                           "updatedAt": {
                                                               "type": "string",
                                                               "example": "2022-08-27T17:27:54.312Z"
                                                           },
                                                           "createdAt": {
                                                               "type": "string",
                                                               "example": "2022-08-27T17:27:54.312Z"
                                                           }
                                                       }
                                                   }          
                                               }
                                           }  
                            }
                            
                        }    
                    },
                    "400": {
                        "description": "Error Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                                   "messageError": {
                                                       "type": "string",
                                                       "example": ["notNull Violation: tarefas.descricao cannot be null", 
                                                                   "notNull Violation: tarefas.titulo cannot be null",
                                                                   "Invalid title or description!"
                                                        ]
                                                   }          
                                               }
                                           }  
                            }
                        }
                        
                    }
                }
            },
            "get": {
                "tags": ["Tarefa"],
                "summary": "Get All task",
                "description": "Getting all application task",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                        "properties": {
                                            "tarefas": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object",
                                                    "example": {
                                                        "id":  "721e6fa8-1800-4d12-a089-c80e00909d94",
                                                        "titulo": "Fazer lição de casa",
                                                        "descricao": "Finalizar liçao de casa de matematica",
                                                        "updatedAt": "2022-08-27T17:27:54.312Z",
                                                        "createdAt": "2022-08-27T17:27:54.312Z" 
                                                    }                                                   
                                                }                                                                                                        
                                            }                                       
                                    }                                   
                                }  
                            }                           
                        }    
                    }
                }
            },
            
        
        "options": {
            "tags": ["Tarefa"],
            "summary": "Get Options",
            "description": "Options request in application"
        }
            
    },
    "/tarefas/{id}":{
        "put": {
            "tags": ["Tarefa"],
            "summary": "Update a task",
            "description": "Updating a application task",
            "parameters":[  
               {  
                  "name":"id",
                  "in":"path",
                  "description":"Task identification number",
                  "required":true,
                  "type":"string"
               }
            ],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "titulo": {
                                    "type": "string"
                                },
                                "descricao": {
                                    "type": "string"
                                }
                            }
                        },
                        "examples": {
                            "tarefa": {
                                "value": {
                                    "titulo": "Lavar a louça",
                                    "descricao": "lavar a louca de casa"
                                }
                            }
                        }
                    }
                }
            },
            "responses":{
                "200": {
                    "description": "Success",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                               "tarefa": {
                                                   "type": "object",
                                                   "properties": {
                                                       "id": {
                                                           "type": "string",
                                                           "example": "721e6fa8-1800-4d12-a089-c80e00909d94"
                                                       },
                                                       "titulo": {
                                                           "type": "string",
                                                           "example": "Lavar a louça"
                                                       },
                                                       "descricao": {
                                                           "type": "string",
                                                           "example": "lavar a louca de casa"
                                                       },
                                                       "updatedAt": {
                                                           "type": "string",
                                                           "example": "2022-08-29T19:30:26.645Z"
                                                       },
                                                       "createdAt": {
                                                           "type": "string",
                                                           "example": "2022-08-27T17:27:54.312Z"
                                                       }
                                                   }
                                               }          
                                           }
                                       }  
                        }
                        
                    }    
                },
                "404":{
                    "description": "Error Request Params",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                                   "messageError": {
                                                       "type": "string",
                                                       "example": "not found!"
                                                    }          
                                               }
                                           }  
                            }
                        }
                }
        }
    },
    "patch": {
        "tags": ["Tarefa"],
        "summary": "Update description",
        "description": "Update description task in application"
    },
    "delete": {
        "tags": ["Tarefa"],
        "summary": "Delete a task",
        "description": "Delete a application task",
        "parameters":[  
               {  
                  "name":"id",
                  "in":"path",
                  "description":"Task identification number",
                  "required":true,
                  "type":"string"
               }
        ],
        "responses": {
            "200": {
                "description": "Delete success",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                           "message": {
                                               "type": "string",
                                               "example": "Tarefa deleta com sucesso"
                                           },
                                           "tarefaDeletada": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "string",
                                                    "example": "721e6fa8-1800-4d12-a089-c80e00909d94"
                                                },
                                                "titulo": {
                                                    "type": "string",
                                                    "example": "Lavar a louça"
                                                },
                                                "descricao": {
                                                    "type": "string",
                                                    "example": "lavar a louca de casa"
                                                },
                                                "updatedAt": {
                                                    "type": "string",
                                                    "example": "2022-08-29T19:30:26.645Z"
                                                },
                                                "createdAt": {
                                                    "type": "string",
                                                    "example": "2022-08-27T17:27:54.312Z"
                                                }
                                            }
                                           }
                                               
                                           }          
                                       }
                                   }  
                    }
                    
                },
                "404":{
                    "description": "Error Request Params",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                                   "messageError": {
                                                       "type": "string",
                                                       "example": "not found!"
                                                    }          
                                               }
                                           }  
                            }
                        }
                }   
            }
        }
     }
    }
 }
